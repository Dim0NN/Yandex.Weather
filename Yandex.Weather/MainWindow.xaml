            <Image x:Name="img_info_day_1" Grid.Row="2" Grid.Column="1"/>
            <Label x:Name="temperature_info_day_1" Content="+25°C" Grid.Row="2" Grid.Column="2" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Label x:Name="wind_info_day_1" Content="Wind_1" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" VerticalContentAlignment="Center"/>
            <Label x:Name="pressure_info_day_1" Content="Pressure_1" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" VerticalContentAlignment="Center"/>
            <Label x:Name="humidity_info_day_1" Content="Humidity_1" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" VerticalContentAlignment="Center"/>
            <Label x:Name="weather_type_info_day_1" Content="Weather_Type_1" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" VerticalContentAlignment="Center"/>

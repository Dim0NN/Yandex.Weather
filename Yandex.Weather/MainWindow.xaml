            <Rectangle Grid.ColumnSpan="2" Grid.Column="1" Fill="#237cff" Opacity="0.37" Grid.Row="7" Grid.RowSpan="6" />
            <Label x:Name="daypart_info_today_morning" Content="Утро" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="temperature_info_today_morning" Grid.ColumnSpan="1" Content="Label" Grid.Column="2"   Grid.Row="8"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="38" Foreground="White"/>
            <Image x:Name="img_info_today_morning" Grid.Column="1"  Grid.Row="8"  Grid.ColumnSpan="1"/>
            <Label x:Name="wind_info_today_morning" Grid.ColumnSpan="2" Content="Label" Grid.Column="1"  Grid.Row="9"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White" />
            <Label x:Name="pressure_info_today_morning" Content="Label" Grid.Column="1"  Grid.Row="10"  Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="humidity_info_today_morning" Grid.ColumnSpan="2" Content="Label" Grid.Column="1"  Grid.Row="11"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="weather_type_info_today_morning" Grid.ColumnSpan="2" Content="Label" Grid.Column="1"  Grid.Row="12"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <!--Day-->
            <Rectangle Grid.ColumnSpan="2" Grid.Column="4" Fill="#237cff" Opacity="0.37" Grid.Row="7" Grid.RowSpan="6" />
            <Label x:Name="daypart_info_today_day" Content="День" HorizontalContentAlignment="Center" Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="temperature_info_today_day" Grid.ColumnSpan="1" Content="Label" Grid.Column="5"   Grid.Row="8"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="38" Foreground="White"/>
            <Image x:Name="img_info_today_day" Grid.Column="4"  Grid.Row="8"  Grid.ColumnSpan="1"/>
            <Label x:Name="wind_info_today_day" Grid.ColumnSpan="2" Content="Label" Grid.Column="4"  Grid.Row="9"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="pressure_info_today_day" Content="Label" Grid.Column="4"  Grid.Row="10"  Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="humidity_info_today_day" Grid.ColumnSpan="2" Content="Label" Grid.Column="4"  Grid.Row="11"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="weather_type_info_today_day" Grid.ColumnSpan="2" Content="Label" Grid.Column="4"  Grid.Row="12"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <!--Evening-->
            <Rectangle Grid.ColumnSpan="2" Grid.Column="7" Fill="#237cff" Opacity="0.37"  Grid.Row="7" Grid.RowSpan="6" />
            <Label x:Name="daypart_info_today_evening" Content="Вечер" HorizontalContentAlignment="Center" Grid.Column="7" Grid.Row="7" Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="temperature_info_today_evening" Grid.ColumnSpan="1" Content="Label" Grid.Column="8"   Grid.Row="8"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="38" Foreground="White"/>
            <Image x:Name="img_info_today_evening" Grid.Column="7"  Grid.Row="8"  Grid.ColumnSpan="1"/>
            <Label x:Name="wind_info_today_evening" Grid.ColumnSpan="2" Content="Label" Grid.Column="7"  Grid.Row="9"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="pressure_info_today_evening" Content="Label" Grid.Column="7"  Grid.Row="10"  Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="humidity_info_today_evening" Grid.ColumnSpan="2" Content="Label" Grid.Column="7"  Grid.Row="11"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="weather_type_info_today_evening" Grid.ColumnSpan="2" Content="Label" Grid.Column="7"  Grid.Row="12"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <!--Nigth-->
            <Rectangle Grid.ColumnSpan="2" Grid.Column="10" Fill="#237cff" Opacity="0.37"  Grid.Row="7" Grid.RowSpan="6" />
            <Label x:Name="daypart_info_today_night" Content="Ночь" HorizontalContentAlignment="Center" Grid.Column="10" Grid.Row="7" Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="temperature_info_today_night" Grid.ColumnSpan="1" Content="Label" Grid.Column="11"   Grid.Row="8"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="38" Foreground="White"/>
            <Image x:Name="img_info_today_night" Grid.Column="10"  Grid.Row="8"  Grid.ColumnSpan="1"/>
            <Label x:Name="wind_info_today_night" Grid.ColumnSpan="2" Content="Label" Grid.Column="10"  Grid.Row="9"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="pressure_info_today_night" Content="Label" Grid.Column="10"  Grid.Row="10"  Grid.ColumnSpan="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="humidity_info_today_night" Grid.ColumnSpan="2" Content="Label" Grid.Column="10"  Grid.Row="11"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
            <Label x:Name="weather_type_info_today_night" Grid.ColumnSpan="2" Content="Label" Grid.Column="10"  Grid.Row="12"  FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Foreground="White"/>
        </Grid>
        <Grid x:Name="GridWeatherWeek" Grid.Row="2" Grid.ColumnSpan="14" d:IsHidden="True" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            <!--Control buttons-->
            <Button x:Name="button_move_left" IsEnabled="False" Content="Left" Grid.Column="0" Grid.Row="6" Grid.RowSpan="3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Click="button_first_days_Click" />
            <Button x:Name="button_move_right" Content="Right" Grid.Column="12" Grid.Row="6" Grid.RowSpan="3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Click="button_last_days_Click"/>

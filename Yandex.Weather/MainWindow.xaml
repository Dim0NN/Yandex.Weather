        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Name="MainFrame" x:Class="Yandex.Forecast.MainWindow"
        Title="Информер погоды" Height="685" Width="920" Icon="content/graphics/yandex-icon.png" ResizeMode="NoResize" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="content/graphics/back1.jpg" />
    </Window.Background>
    <Grid x:Name="GridMainWnd">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="button_settings" Content="Настройки" Grid.Column="12"   Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Click="button_settings_Click"/>
        <Button x:Name="button_load" Content="Обновить" Grid.Column="10"   Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Click="button_load_Click"/>
        <Button x:Name="button_forecast_type" Content="Прогноз на 8 дней" Grid.Column="7" Grid.ColumnSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18" Click="button_forecast_type_Click"/>
        <Label x:Name="last_refresh" Content="Погода актуальна на 12:37 21.02.2014" HorizontalContentAlignment="Right" Grid.Column="8" Grid.ColumnSpan="5" Grid.Row="1" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="18"/>
        <Grid x:Name="GridWeatherDay" Grid.Row="2" Grid.ColumnSpan="14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!--today forecast-->
            <Image x:Name="img_info_today_now" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" />
            <Label x:Name="city_name" Grid.ColumnSpan="4" Content="Название города" Grid.Column="1" Grid.Row="0" Foreground="White" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="32"/>
            <Rectangle Grid.ColumnSpan="4" Grid.Column="8" Fill="#237cff" Opacity="0.65"  Grid.Row="2" Grid.RowSpan="4" />
            <Label x:Name="wind_info_today_now" Grid.ColumnSpan="4" Content="Label" Grid.Column="8" Grid.Row="2" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="20" Foreground="White"/>
            <Label x:Name="pressure_info_today_now" Grid.ColumnSpan="4" Content="Label" Grid.Column="8" Grid.Row="3" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="20" Foreground="White"/>
            <Label x:Name="humidity_info_today_now" Grid.ColumnSpan="4" Content="Label" Grid.Column="8" Grid.Row="4" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="20" Foreground="White"/>
            <Label x:Name="weather_type_info_today_now" Grid.ColumnSpan="4" Content="Label" Grid.Column="8" Grid.Row="5" FontFamily="/Yandex.Weather;component/content/#Segoe WP Light" FontSize="20" Foreground="White"/>
            <Label x:Name="temperature_info_today_now" Grid.ColumnSpan="4" Content="+21°С" Grid.Column="4" Grid.Row="2" Grid.RowSpan="4" FontFamily="/Yandex.Weather;component/content/#Segoe WP" FontSize="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
